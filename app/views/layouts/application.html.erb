<!DOCTYPE html>
<html>
<head>
  <title>Firstfm</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= image_tag 'logo.png', :style => "width:100px; float:right;" %>

  <% if user_signed_in? %>
    <%= gravatar_image_for(current_user.email) %>
    <p>hello <%= link_to current_user.email, edit_user_registration_path %> | <%= link_to 'sign out', destroy_user_session_path, :method => 'delete' %></p>
  <% else %>
    <p><%= link_to 'sign in', user_session_path %> </p>
  <% end %>

  <hr/>
  <%= yield %>

</body>
</html>
